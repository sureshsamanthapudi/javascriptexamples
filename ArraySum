//Sum of an array with out using loops

var arr = [1,2,4,8]

console.log("sum",sum(arr,0))
function sum(arr,index){
   if (arr.length <= index) {
      console.log("returning 0",arr.length <= index,arr.length)
      return 0;
   }
  // var val =  arr[index] + sum(arr,index+1)
   //console.log("val",val)
   return arr[index] + sum(arr,index+1)
}

